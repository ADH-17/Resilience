{
    "name": "Resilience",
    "version": "1.0",
    "description": "Helps users quit porn",
    "manifest_version": 3,
    "permissions": ["storage"], 
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "Resilience, Quit Porn Today"
    },
    "declaritive_net_request": {
      "rule_resources": [
        {
          "id": "block_porn",
          "enabled": true,
          "url": "rules.json"
        }
      ]
    }
  }
  